<h3>Venue Details</h3>
<form class="" action="/venues/<%= @venue.id %>/update" method="post">
<label for="venue_name">Venue Name</label>
<input type="text" name="venue_name" value="<%= @venue.venue_name %>">
<button type="submit" name="update">Save</button>
</form>

<h3>Upcoming Bands</h3>
<table class="table table-striped table-bordered table-condensed">
<tr>
  <th>Band</th>
  <th>Date</th>
</tr>
<% @venue.gigs.each do |g| %>
<tr>
  <td><a href="/bands/<%= g.band_id %>/edit"><%= g.band.band_name %></a></td>
  <td><%= g.gig_date %></td>
  <td><a href="/venues/<%= @venue.id %>/gig/<%= g.id %>/delete">Delete</a></td>
</tr>
<% end %>
</table>

<h3>Add a Gig</h3>
<form class="" action="/venues/<%= @venue.id %>/gig/add" method="post">
  <select name="band_id">
    <% @bands.each do |b| %>
    <option value="<%= b.id %>"><%= b.band_name %></option>
    <% end %>
  </select>
<input type="datetime-local" name="gig_date" value="">
<button type="submit" name="name" value="">Add Gig</button>
</form>
